{
  "name": "tdd-mentor-ai",
  "displayName": "TDD-Mentor-AI",
  "description": "Mentor AI che supporta gli studenti nel ciclo di Test-Driven Development (TDD)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Education",
    "Testing",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tdd-mentor-ai.start",
        "title": "TDD Mentor: Avvia Sessione",
        "icon": "$(play)"
      },
      {
        "command": "tdd-mentor-ai.pickPhase",
        "title": "TDD Mentor: Fase PICK",
        "icon": "$(list-selection)"
      },
      {
        "command": "tdd-mentor-ai.redPhase",
        "title": "TDD Mentor: Fase RED",
        "icon": "$(error)"
      },
      {
        "command": "tdd-mentor-ai.greenPhase",
        "title": "TDD Mentor: Fase GREEN",
        "icon": "$(check)"
      },
      {
        "command": "tdd-mentor-ai.refactorPhase",
        "title": "TDD Mentor: Fase REFACTORING",
        "icon": "$(refresh)"
      },
      {
        "command": "tdd-mentor-ai.verify",
        "title": "TDD Mentor: Verifica Test",
        "icon": "$(beaker)"
      },
      {
        "command": "tdd-mentor-ai.complete",
        "title": "TDD Mentor: Completa Fase",
        "icon": "$(pass)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tdd-mentor-ai-sidebar",
          "title": "TDD Mentor AI",
          "icon": "$(test-view-icon)"
        }
      ]
    },
    "views": {
      "tdd-mentor-ai-sidebar": [
        {
          "id": "tdd-mentor-ai-cycle",
          "name": "Ciclo TDD",
          "type": "webview"
        },
        {
          "id": "tdd-mentor-ai-interaction",
          "name": "Interazione",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tdd-mentor-ai.start",
          "when": "view == tdd-mentor-ai-cycle",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "TDD Mentor AI",
      "properties": {
        "tddMentorAI.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "API key di OpenAI per le funzionalit√† di intelligenza artificiale",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
